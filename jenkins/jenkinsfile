properties([
    parameters([
        // Active Choices Parameter for Environment
        [
            $class: 'CascadeChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',  // Single select dropdown
            description: 'Select the Env Name from the Dropdown List',
            name: 'Env',
            randomName: 'choice-parameter-1',
            script: [
                $class: 'GroovyScript',
                script: [
                    classpath: [], 
                    sandbox: false, 
                    script: 
                        'return ["Dev", "QA", "Stage", "Prod"]'
                ]
            ]
        ],
        
        // Active Choices Reactive Parameter for Server, depending on the selected Env
        [
            $class: 'CascadeChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',
            description: 'Select the Server from the Dropdown List',
            name: 'Server',
            randomName: 'choice-parameter-2',
            referencedParameters: 'Env',  // This parameter reacts to the selected 'Env'
            script: [
                classpath: [], 
                sandbox: false, 
                script: 
                    ''' if (Env.equals("Dev")){
                            return["devaaa001","devaaa002","devbbb001","devbbb002","devccc001","devccc002"]
                        }
                        else if(Env.equals("QA")){
                            return["qaaaa001","qabbb002","qaccc003"]
                        }
                        else if(Env.equals("Stage")){
                            return["staaa001","stbbb002","stccc003"]
                        }
                        else if(Env.equals("Prod")){
                            return["praaa001","prbbb002","prccc003"]
                        }
                    '''
            ]
        ]
    ])
])

pipeline {
    agent any

    stages {
        stage('Hello World') {
            steps {
                sh 'echo "Extracting data..."'
                echo "Selected Environment: ${params.Env}"
                echo "Selected Server: ${params.Server}"
            }
        }
    }
}
